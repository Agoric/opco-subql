{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    // UNTIL https://github.com/Agoric/agoric-sdk/issues/11038
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2017",
    "lib": ["es2021"]
  },
  "include": [
    "src",
    "node_modules/@subql/types-core/dist/global.d.ts",
    "node_modules/@subql/types-cosmos/dist/global.d.ts"
  ]
}
